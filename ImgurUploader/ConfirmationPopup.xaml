<UserControl
    x:Class="ImgurUploader.ConfirmationPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImgurUploader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="160">

    <Grid Background="{StaticResource ContentBackgroundColor}">
        <Border BorderBrush="{StaticResource GreenAccentLight}" BorderThickness="2"/>
        <Grid Margin="16">
            <TextBlock x:Name="MessageTextBox" Text="Are you sure you want to do this?" TextWrapping="Wrap" Style="{StaticResource ItemTextStyle}" />
            <Button x:Name="AffirmativeButton" Content="DO IT" Style="{StaticResource FlatButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="AffirmativeButton_Click" Background="Gray"/>
        </Grid>


    </Grid>


</UserControl>
